{
  "name": "raviger",
  "version": "0.3.5",
  "description": "React routing with hooks",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "files": [
    "dist/"
  ],
  "repository": "git@github.com:kyeotic/raviger.git",
  "author": "Tim Kye <tyrsius@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "style": "prettier --config package.json  --write \"{src,test}/**/*.js\"",
    "lint": "eslint -c package.json \"{src,test}/**/*.js\"",
    "check": "npm run style && npm run lint",
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "example:build": "rollup -c example/rollup.config.js && yarn run example:build:link-react",
    "example:build:watch": "rollup -c example/rollup.config.js --watch",
    "example:build:link-react": "mkdir -p example/dist && ln -sf $PWD/node_modules/react/umd/react.development.js example/dist/react.js && ln -sf $PWD/node_modules/react-dom/umd/react-dom.development.js example/dist/react-dom.js",
    "example:serve": "npm run example:build:link-react && http-server example/ -p 8080 --proxy http://localhost:8080?",
    "example:dev": "run-p example:build:watch example:serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "run-s test:coverage coverage:report",
    "coverage:report": "open coverage/lcov-report/index.html",
    "test:ci": "run-s size test",
    "size": "run-s build size:check",
    "size:check": "size-limit"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@kyeotic/eslint-config": "^1.0.1",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.7",
    "babel-jest": "^24.8.0",
    "eslint": "^5.6.0",
    "eslint-plugin-react": "^7.14.3",
    "http-server": "^0.11.1",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.8",
    "react-dom": "^16.8",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-replace": "^2.2.0",
    "size-limit": "^1.3.8"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "size-limit": [
    {
      "webpack": false,
      "path": "dist/module.js",
      "limit": "4kb"
    }
  ]
}
